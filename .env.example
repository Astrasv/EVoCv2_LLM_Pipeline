# Database
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/ea_evolution_db

# Redis
REDIS_URL=redis://localhost:6379

# ChatGroq API
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=your-model-name # e.g. llama-3.3-70b-versatile


# Security
SECRET_KEY=your-super-secret-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application
APP_NAME=EA Code Evolution Platform
DEBUG=true
HOST=0.0.0.0
PORT=8000

# Evolution
MAX_EVOLUTION_ITERATIONS=10
DEFAULT_POPULATION_SIZE=50
MAX_CONTEXT_TOKENS=4000

# Chat
MAX_CHAT_HISTORY=100
CONTEXT_COMPRESSION_THRESHOLD=80